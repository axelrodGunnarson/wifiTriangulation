<UserControl x:Class="WhereAmI.views.PlacesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Loaded="OnControlLoaded">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <!-- 
                        ListView: ItemsSource is assigned in the .cs file
                        It is possible to describe a presentation template
                    -->
        <ListView Grid.Column="0" Margin="10" Name="placesViewData" DisplayMemberPath="Name" SelectionMode="Single" SelectionChanged="placesViewData_Selected"></ListView>
        <!-- GridSplitter to resize column -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />
        <StackPanel DataContext="{Binding ElementName=placesViewData, Path=SelectedItem}" Name="placeViewDetail" Grid.Column="2" Margin="10,0,0,0" Visibility="Hidden">
            <!-- 
                            Note: this is the detail element 
                            The binding is from data of another viewer element (ElementName) and precisely
                            the element bound is given by the property SelectedItem
                        -->
            <TextBox Name="PlaceName" Text="{Binding Name}" FontSize="30" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" IsReadOnly="True"></TextBox>
            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" >
                <Label Content="Time" FontSize="15"></Label>
                <TextBlock Text="{Binding Cnt}" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap"></TextBlock>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" >
                <!-- binding of eventhandlers to controls-->
                <Button Name="btnChangePlace" Click="btnChangePlace_Click" Width="103" FontSize="15" Content="Edit"  HorizontalAlignment="Left"/>
                <Button Name="btnDeletePlace" Click="btnDeletePlace_Click"  Width="103" FontSize="15" Margin="10,0,0,0" HorizontalAlignment="Left">Delete</Button>
                <Button Name="btnResetStatPlace" Click="btnResetStatPlace_Click"  Width="103" FontSize="15" Margin="10,0,0,0" HorizontalAlignment="Left">Reset</Button>
            </StackPanel>
            <!--Items list as in the first tab-->
            <ItemsControl ItemsSource="{Binding Wifis}" Name="snapshot" HorizontalAlignment="Left">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="200" />
                            </Grid.ColumnDefinitions>
                            <TextBlock FontSize="15" Grid.Column="0"  Text="{Binding SSID}" />
                            <ProgressBar  Grid.Column="1"  Margin="10,0,0,0"  Minimum="0" Maximum="100" Value="{Binding PowerPerc}" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Label  Grid.Row="2" Content="Actions" FontSize="15" FontWeight="Bold"/>
            <Grid Height="100">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Text="Actions"                 
                   FontSize="15"/>
                <TextBlock Grid.Row="0"
                   Grid.Column="1"
                   Text="Available actions" 
                   FontSize="15"/>
                <ListBox Grid.Row="1"
                 Grid.Column="0"
                 x:Name="lbActions" 
                 PreviewMouseLeftButtonDown="ListBox_PreviewMouseLeftButtonDown"
                 Drop="ListBox_DropActions" 
                 AllowDrop="True"
                 ScrollViewer.VerticalScrollBarVisibility="Visible" Margin="0"
                 ItemsSource="{Binding InActions}"
                 >
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                        Text="{Binding Name}"
                        HorizontalAlignment="Center"
                        FontSize="15"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <ListBox Grid.Row="1"
                 Grid.Column="1"
                 x:Name="lbAvailableActions"
                 PreviewMouseLeftButtonDown="ListBox_PreviewMouseLeftButtonDown"
                 AllowDrop="True"
                 Drop="ListBox_DropAvailableActions" 
                 ScrollViewer.VerticalScrollBarVisibility="Visible" Margin="0,0,10,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                        Text="{Binding Name}"
                        HorizontalAlignment="Center"
                        FontSize="15"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
